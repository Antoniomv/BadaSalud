<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".Fragmentos.RegistroFragmento">

    <!-- TODO: Update blank fragment layout -->

    <!--android:layout_marginBottom="5dp"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:layout_marginRight="10dp"-->
    <!--android:layout_marginTop="5dp"-->

    <LinearLayout
        android:id="@+id/linear_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borde"
        android:backgroundTint="#f3f3f4"
        android:baselineAligned="false"
        android:orientation="vertical" tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/iconofinal"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/advertencia"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold|italic" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Nombre"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:ems="10"
                android:hint="@string/introduce_tu_string_nombre"
                android:inputType="textPersonName"
                android:textColor="#000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Apellidos"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/apellidos"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:ems="10"
                android:hint="@string/introduce_tu_string_apellidos"
                android:inputType="textPersonName"
                android:textColor="#000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/telefono"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/tel_fono"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:ems="10"
                android:hint="@string/introduce_tu_telefono"
                android:inputType="phone"
                android:textColor="#000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/email_tx"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:ems="10"
                android:hint="@string/introduce_tu_email"
                android:inputType="textEmailAddress"
                android:textColor="#000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Password"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/password_tx"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabla"
                android:ems="10"
                android:hint="@string/introduce_tu_password"
                android:inputType="textPassword"
                android:textColor="#000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/invisible"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton"
                android:text="@string/registrarse"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logueate_si_ya_teines_una_cuenta"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />
        </TableRow>

    </LinearLayout>
</FrameLayout>