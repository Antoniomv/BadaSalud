<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.DesignCitaFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/nueva_cita_ly"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borde">

        <Spinner
            android:id="@+id/spinner_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="107dp" />

        <TextView
            android:id="@+id/titulo_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:text="Título"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/hospital_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinner_hospital"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-107dp"
            android:layout_marginLeft="10dp"
            android:text="Hospital"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/especialidad_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="168dp"
            android:text="Especialidad"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_especialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/especialidad_cita" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/editText"
            android:layout_marginBottom="202dp"
            android:layout_marginLeft="10dp"
            android:text="Fecha y Hora"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calendario_cita"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="186dp"
            android:src="@drawable/calendar_icon" />

        <EditText
            android:id="@+id/fechahora_cita"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/calendario_cita"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-186dp"
            android:ems="10"
            android:inputType="datetime" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_agregarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="34dp"
                android:background="@drawable/boton"
                android:text="Añadir Cita" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>