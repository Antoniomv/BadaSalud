<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listado_vista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borde_titulo"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/imagenHospital"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/telefonoHospital"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/todo"
        android:cropToPadding="true"
        android:src="@drawable/iconohospital" />

    <TextView
        android:id="@+id/nombreHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imagenHospital"
        android:text="Nombre Hospital"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/direccionHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nombreHospital"
        android:layout_below="@+id/nombreHospital"
        android:text="DireccionHospital"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/telefonoHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/direccionHospital"
        android:layout_below="@+id/direccionHospital"
        android:text="TelÃ©fono Hospital"
        android:textAppearance="?attr/textAppearanceListItem" />
</RelativeLayout>
